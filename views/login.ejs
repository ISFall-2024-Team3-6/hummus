<!-- This is to create a session and go to the users homepage -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Login</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <link rel="stylesheet" href="/style/styles.css">
</head>
<body>
  <!-- Navigation bar -->
<nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">Hummus Project</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavDropdown">

      <!-- This is the beginning of the "list" of items in our navigation bar -->
      <ul class="navbar-nav">

        <!-- This is the button to go back to the home page -->
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="/">Home</a>
        </li>
      </ul>

      <!-- This last form is a link to the donation page, which is our call to action to every user that visits
       the page -->
      <form action="/login" method="GET" class="d-inline ms-auto">
        <button type="submit" class="btn btn-lg">Login</button>
      </form>
    </div>
  </div>
</nav>
  

<div class="login-container">
  <h2>Login</h2>
  <form action="/login" method="POST">
    <label for="username">Username:</label>
    <input type="text" id="username" name="username" required>
    
    <label for="password">Password:</label>
    <input type="password" id="password" name="password" required>
    
    <button type="submit">Log In</button>
    
    <!-- Display error message if login fails -->
    <div class="error" id="error-message" style="display: none;">Invalid username or password</div>
    
    <!-- Link to create an account -->
    <a href="/createUser" class="create-account">Create an Account</a>
  </form>
</div>

</body>
</html>
