<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Account</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <link rel="stylesheet" href="/style/styles.css">
</head>
<body>
  <!-- Navigation bar -->
<nav class="navbar navbar-expand-lg navbar-light navbar-custom fixed-top">
  <img src="/images/Designer.png" alt="Nature's Hummus Logo" style="width: 50px; height: auto; margin-left: 10px;">
  <div class="container-fluid">
    <a class="navbar-brand" style="color: black;" href="/">Nature's Hummus</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavDropdown">

      <!-- This is the beginning of the "list" of items in our navigation bar -->
      <ul class="navbar-nav">

        <!-- This is the button to go back to the home page -->
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="/">Home</a>
        </li>
      </ul>

      <!-- This last form is a link to the donation page, which is our call to action to every user that visits
       the page -->
      <form action="/logout" method="GET" class="d-inline ms-auto">
        <button type="submit" class="btn btn-lg">Logout</button>
      </form>
    </div>
  </div>
</nav>

<div class="create-account-container">
  <h2>Edit Account Information</h2>
  <form action="/editAccount" method="POST">
    <% function capitalize(str) { return str.charAt(0).toUpperCase() + str.slice(1).toLowerCase(); } %>
    <label for="first_name">First Name:</label>
    <input type="text" id="first_name" name="firstname" value= <%= capitalize(customer.firstname)%> required>

    <label for="last_name">Last Name:</label>
    <input type="text" id="last_name" name="lastname" value= <%= capitalize(customer.lastname) %> required>

    <label for="username">Username:</label>
    <input type="text" id="username" name="username" value= <%= customer.username %> required>

    <label for="password">Password:</label>
    <input type="text" id="password" name="password" value= <%= customer.password %> required>

    <label for="dob">Date of Birth:</label>
    <input type="date" id="dob" name="dob" value= <%= customer.dob.toISOString().split('T')[0] %> required>

    <label for="email">Email:</label>
    <input type="email" id="email" name="email" value= <%= customer.email %> required>

    <label for="city">City (optional):</label>
    <input type="text" id="city" name="city" value= <%= customer.city %>>

    <label for="state">State (optional):</label>
    <input type="text" id="state" name="state" value= <%= customer.state %>>

    <label for="zip">Zip Code (optional):</label>
    <input type="text" id="zip" name="zip" value= <%= customer.zip %>>

    <label for="phone">Phone (optional):</label>
    <input type="tel" id="phone" name="phone" value= <%= customer.phone %>>

    <input type="submit" value="Commit Account Changes">


  </form>
</div>

</body>
</html>